generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(cuid())
  email      String @unique
  first_name String
  last_name  String

  Friends           Friends[] @relation(name: "user_friends")
  FriendUserFriends Friends[] @relation(name: "friend_user_friends")
}

model Friends {
  id             String @id @default(cuid())
  user_id        String
  friend_user_id String

  User        User @relation(name: "user_friends", fields: [user_id], references: [id])
  Friend_User User @relation(name: "friend_user_friends", fields: [friend_user_id], references: [id])

  @@unique([user_id, friend_user_id])
}
